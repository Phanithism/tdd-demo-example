%p#notice= notice
%h1 Listing Posts
%table.table.table-hover
  %thead
    %tr
      %th Title
      %th Body
      %th{:colspan => "3"}
  %tbody
    - @posts.each do |post|
      %tr
        %td= post.title
        %td= post.body
        %td= link_to 'Show', post
        %td= link_to 'Edit', '#', {"data-target" => "#myModalPost-#{post.id}", "data-toggle" => "modal", :type => "button"}
        = render 'edit_modal', post: post
        %td= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Post', new_post_path
